<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="English4Kids.Signup">
    <ContentPage.Content>
        <StackLayout>
            <ImageButton Source="back.jpg" VerticalOptions="Fill"
                     HorizontalOptions="Start"
                     Clicked="btn_back_clicked" CornerRadius="50" WidthRequest="70" 
                     HeightRequest= "70" />
            <Label Text="Username" TextColor="Red"/>
            <Entry x:Name="usernameEntry" Placeholder="username" />
            <Label Text="Password" TextColor="Red"/>
            <Entry x:Name="passwordEntry" IsPassword="true" />
            <Label Text="Full Name" />
            <Entry x:Name="fullnameEntry"/>
            <Label Text="Email"/>
            <Entry x:Name="emailEntry" />
            <Button Text="Sign up" Clicked="btn_Signup_clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>